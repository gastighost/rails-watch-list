<div class="container">
<%= link_to 'Add a movie', new_list_bookmark_path(@list) %>

<% if @list.photo.key %>
<%= cl_image_tag @list.photo.key, height: 300, width: 400, crop: :fill %>
<% end %>

<ul class="list-group">
  <% @list.movies.each do |movie| %>
  <div class="container">
    <li><%= movie.title %></li>
  </div>
  <% end %>
</ul>

<%= link_to 'Return to list homepage', root_path %>

</div>
